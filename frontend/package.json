{
  "name": "astrum-frontend",
  "version": "1.0.0",
  "description": "Astrum frontend built with Elm and SCSS",
  "scripts": {
    "build": "npm run build:elm && npm run build:scss",
    "build:elm": "elm make src/Main.elm --optimize --output=static/dist/elm.js",
    "build:elm:debug": "elm make src/Main.elm --debug --output=static/dist/elm.js",
    "build:scss": "sass styles/main.scss static/dist/styles.css --style=compressed --no-source-map",
    "watch": "npm-run-all --parallel watch:*",
    "watch:elm": "chokidar \"src/**/*.elm\" -c \"npm run build:elm:debug\"",
    "watch:scss": "sass styles/main.scss static/dist/styles.css --watch",
    "format": "elm-format src/ --yes",
    "test": "elm-test",
    "review": "elm-review"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "elm": "^0.19.1-6",
    "elm-format": "^0.8.7",
    "elm-review": "^2.13.2",
    "elm-test": "^0.19.1-revision17",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0"
  },
  "keywords": [
    "elm",
    "wails",
    "desktop"
  ],
  "license": "MIT"
}
